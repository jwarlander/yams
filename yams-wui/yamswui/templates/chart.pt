<div id="chart"></div>
<script type="text/javascript">
var margin = {top: 20, right: 50, bottom: 30, left: 50},
    width = 960 - margin.left - margin.right,
    height = 500 - margin.top - margin.bottom;

var parseDate = d3.time.format("%Y-%m-%d %H:%M:%S").parse;

var x = d3.time.scale()
    .range([0, width]);

var y = d3.scale.linear()
    .range([height, 0]);

var color = d3.scale.category10();

var xAxis = d3.svg.axis()
    .scale(x)
    .orient("bottom");

var yAxis = d3.svg.axis()
    .scale(y)
    .orient("left");

var line = d3.svg.line()
    .interpolate("basis")
    .x(function(d) { return x(d.timestamp); })
    .y(function(d) { return y(d.val); });

var svg = d3.select("#chart").append("svg")
    .attr("width", width + margin.left + margin.right)
    .attr("height", height + margin.top + margin.bottom)
  .append("g")
    .attr("transform", "translate(" + margin.left + "," + margin.top + ")");

d3.csv("data/postgresql/p-bna-pg01.int?type=table_stats&database=audience&schema=shard0993&table=member&dsnames=seq_scan&dsnames=seq_tup_read&dsnames=idx_scan", function(error, data) {
  color.domain(d3.keys(data[0]).filter(function(key) { return key !== "timestamp"; }));

  data.forEach(function(d) {
    d.timestamp = parseDate(d.timestamp);
  });

  var dsnames = color.domain().map(function(name) {
    return {
      name: name,
      values: data.map(function(d) {
        return {timestamp: d.timestamp, val: +d[name]};
      })
    };
  });

  x.domain(d3.extent(data, function(d) { return d.timestamp; }));

  y.domain([
    d3.min(dsnames, function(c) { return d3.min(c.values, function(v) { return v.val; }); }),
    d3.max(dsnames, function(c) { return d3.max(c.values, function(v) { return v.val; }); })
  ]);

  svg.append("g")
      .attr("class", "x axis")
      .attr("transform", "translate(0," + height + ")")
      .call(xAxis);

  svg.append("g")
      .attr("class", "y axis")
      .call(yAxis)
    .append("text")
      .attr("transform", "rotate(-90)")
      .attr("y", 6)
      .attr("dy", ".71em")
      .style("text-anchor", "end")
      .text("${ylabel}");

  var dsname = svg.selectAll(".dsname")
      .data(dsnames)
    .enter().append("g")
      .attr("class", "dsname");

  dsname.append("path")
      .attr("class", "line")
      .attr("d", function(d) { return line(d.values); })
      .style("stroke", function(d) { return color(d.name); });

  var legend = svg.selectAll(".legend")
      .data(color.domain())
    .enter().append("g")
      .attr("class", "legend")
      .attr("transform", function(d, i) { return "translate(0," + i * 20 + ")"; });

  legend.append("rect")
      .attr("x", width - 18)
      .attr("width", 18)
      .attr("height", 18)
      .style("fill", color);

  legend.append("text")
      .attr("x", width - 24)
      .attr("y", 9)
      .attr("dy", ".35em")
      .style("text-anchor", "end")
      .text(function(d) { return d; });
});
</script>
